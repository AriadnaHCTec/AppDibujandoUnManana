<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="32dp">

    <TextView
        android:id="@+id/contact_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:text="Contact"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contact_description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_title_text"
        android:gravity="center"
        android:text="¿Estás intersado en contribuir a nuestra causa? ¡Contactanos!"
        android:textColor="@color/black"
        android:textSize="15sp" />


    <!--WebView falta su código para que funcione-->
    <WebView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_description_text"
        android:layout_marginTop="32dp"/>
</RelativeLayout>